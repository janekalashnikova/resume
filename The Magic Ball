from random import *
answers = ['Бесспорно', 'Предрешено', 'Никаких сомнений', 'Определённо да', 'Можешь быть уверен в этом',
           'Мне кажется - да', 'Вероятнее всего', 'Хорошие перспективы', 'Знаки говорят - да', 'Да',
           'Пока неясно, попробуй снова', 'Спроси позже', 'Лучше не рассказывать', 'Сейчас нельзя предсказать',
           'Сконцентрируйся и спроси опять', 'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет',
           'Перспективы не очень хорошие', 'Весьма сомнительно']
print('Привет, Мир, я магический шар, и я знаю ответ на любой твой вопрос.\n')
name = input('Для начала, как Вас зовут? ')
print()
print(f'Приветствую, {name}!')
def ask():
    global rep
    input('\nЗадайте свой вопрос: ')
    print(f'\n{choice(answers)}\n')
ask()
rep = input('У Вас есть ещё вопрос? (да, нет) ')
while rep != 'да' and rep != 'нет':
    print('\nПопробуйте ещё раз ввести ответ\n')
    rep = input('У Вас есть ещё вопрос? (да, нет) ')
while rep == 'да':
    ask()
    rep = input('У Вас есть ещё вопрос? (да, нет) ')
else:
    print('Возвращайся, если возникнут вопросы!')
